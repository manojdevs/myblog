<%= form_for(@article, html: {multipart: true}) do |f| %>
  <ul>
  <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  
  </ul>
  <div class="well sidebar-nav" style="opacity:0.8">
            
           <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
  <% if @article.image.exists? %>
      <%= image_tag @article.image.url %><br/>
  <% end %>
  <%= f.label :image, "Attach an Image" %><br />
  <%= f.file_field :image %>
</p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  
  <p >
    <%= f.submit %>
  </p>
  <div class="btn btn-default"><%= link_to "cancel", articles_path %></div>
<% end %> 
          </div><!--/.well -->
          <style>
          textarea{ 
  width: 80%; 
  

  height:100px; 
  min-height:100px;  
  max-height:100px;
}
          </style>
  